            "domainNameLabel": true
          }
        },
        "defaultValue": {
          "publicIpAddressName": "BotTimePublicIP",
          "domainNameLabel": "bottimeconsole"
        },
        "options": {
          "hideNone": false,
          "hideDomainNameLabel": false,
          "hideExisting": false,
          "zone": 3
        },
        "visible": true
      }
    ],
    "steps": [],
    "outputs": {
      "adminUsername": "[basics('dnsLabelPrefix')]"
    }
  }
}